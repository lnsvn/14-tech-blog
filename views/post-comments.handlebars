<div id="page-card" class="card text-center m-4 shadow rounded">
  <div class="card-body">
    The Tech Blog
  </div>
</div>


<div class="container-fluid green-container py-2">
    
    <div id="post-card" class="card m-4 border-4">
    <div id="pc-title" class="card-title px-3">
        {{title}} 
        <span>Posted by {{user.username}} on {{format_date date_created}}</span>
    </div>
    <div class="card-body">
        {{content}}
    </div>
    </div>

    <div class="d-flex justify-content-center">
      <a href="/add-comment/{{id}}" type="button" class="btn p-2 m-2 btn-lg newpost-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        Add Comment
      </a>

      <a href="/" type="button" class="btn p-2 m-2 btn-lg newpost-btn">Go Back</a>
    </div>

    {{#each comments as |comment|}}
      <div id="post-card" class="card m-4 border-4">
        <div id="comment-card" class="card-body">
          {{comment.comment}}
          <span>--{{user.username}}, {{format_date comment.date_created}}</span>
        </div>
      </div>
    {{/each}}
   
</div>

