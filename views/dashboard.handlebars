<div class="container">
  <div class="row">

    <div id="page-card" class="card text-center m-4 shadow rounded">
      <div class="card-body">
        Your Dashboard
      </div>
    </div>

    <div>
      <button type="button" class="btn p-2 btn-lg newpost-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        New Post
      </button>
    </div>

  </div>
</div>

<div class="container-fluid py-2">
    {{#if logged_in}}
      {{#if posts.length}}
        {{#each posts as |post|}}
        <div id="dashboard-card" class="card m-4 border-4">
          <div id="db-title" class="card-title px-3">
            {{post.title}} 
            <span>{{format_date post.date_created}}</span>
          </div>
        </div>
        {{/each}}
      {{/if}}
    {{/if}}
</div>