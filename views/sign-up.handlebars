<div id="page-card" class="card text-center m-4 shadow rounded">
  <div class="card-body">
    The Tech Blog
  </div>
</div>

<div class="container-fluid py-2">
  <div id="post-card" class="card m-4 border-4">

    <div id="pc-title" class="card-title px-3">
      Sign Up
    </div>

    <div class="card-body">

      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username</label>
          <input type="text" class="form-control" id="username-signup" placeholder="Enter username">
        </div>
        </br>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input type="password" class="form-control" id="password-signup" placeholder="Enter password">
          <small id="passwordHelp" class="form-text text-muted">Password length must be at least 8 characters.</small>
        </div>
        </br>
        <button type="submit" class="btn signup-btn btn-lg">Sign Up</button>
        </br></br>
        <a href="/login" class="login-link">Back to Login</a>
      </form>

    </div>

  </div>
</div>

<script src="/js/signup.js"></script>